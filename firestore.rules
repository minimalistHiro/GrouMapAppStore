rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isOwner == true;
    }
    // ユーザーコレクション
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // オーナー設定コレクション
    match /owner_settings/{storeId} {
      allow read: if true;
      allow write: if isOwner();
    }
    
    // 店舗コレクション
    match /stores/{storeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role in ['admin', 'company']);
    }
    
    // バッジコレクション
    match /badges/{badgeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.role in ['admin', 'company'];
    }
    
    // クーポンコレクション
    match /coupons/{couponId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role in ['admin', 'company']);
    }

    // 公開クーポンコレクション（ユーザー表示用）
    match /public_coupons/{couponId} {
      allow read: if true;
      allow write: if request.auth != null &&
        (request.auth.uid == resource.data.createdBy ||
         request.auth.token.role in ['admin', 'company']);
    }
    
    // 投稿コレクション
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role in ['admin', 'company']);
    }

    // 公開投稿コレクション（ユーザー表示用）
    match /public_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role in ['admin', 'company']);
    }
    
    // フィードバックコレクション
    match /feedback/{feedbackId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // 通知コレクション
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.role in ['admin', 'company'];
    }
    
    // お知らせコレクション
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.role in ['admin', 'company'];
    }
    
    // ポイントリクエストコレクション（新しい構造対応）
    match /point_requests/{storeId} {
      // 店舗のポイントリクエストドキュメント
      allow read, write: if true;
      
      // ユーザー別のリクエストサブコレクション
      match /{userId}/{requestDoc} {
        // 一時的に全てのアクセスを許可（テスト用）
        allow read, write: if true;
      }
    }
    
    // 古い構造のポイントリクエストコレクション（後方互換性）
    match /point_requests/{requestId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ポイントトランザクションコレクション
    match /point_transactions/{storeId} {
      // 店舗のポイントトランザクションドキュメント
      allow read, write: if true;
      
      // ユーザー別のトランザクションサブコレクション
      match /{userId}/{transactionId} {
        // 一時的に全てのアクセスを許可（テスト用）
        allow read, write: if true;
      }
    }
    
    // QR検証コレクション
    match /qr_verifications/{verificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // その他のコレクションは認証が必要
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
